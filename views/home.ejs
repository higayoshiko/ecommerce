<%- include("partials/header"); -%>
<%- include("partials/navbar"); -%>


    <div class="container">
      <section class="sections">
        <form class="searchBar center" action="/" method="POST">
          <select class="" name="category">
             <option value="all" selected>all</option>
             <option value="men's clothing">men's clothing</option>
             <option value="jewelery">jewelery</option>
             <option value="electronics">electronics</option>
             <option value="women's clothing">women's clothing</option>
          </select>
          <input type="text" name="search_input" value="">
          <input type="submit" name="button" value="search">
        </form>
      </section>
      <section class="sections">
        <div class="grid center">
          <% products.map(product => { %>
            <form action="/" method="POST">
              <img src="<%= product.image %>" class="product-img" name="itemImage" alt="">
              <h3 name="itemName"><%=product.title%></h3>
              <h4 name="itemPrice">$<%=product.price%></h4>
              <button class="product-btn" type="submit" name="button">Add to cart</button>
            </form>
          <% })%>
        </div>
      </section>
    </div>


<%- include("partials/footer"); -%>
